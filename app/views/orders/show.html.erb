<div class="using-border py-3">
  <div class="inner_breadcrumb  ml-4">
    <ul class="short_ls">
      <li>
        <%= link_to "home", root_path()%>
        <span>/ /</span>
      </li>
      <li>Order</li>
    </ul>
  </div>
</div>

<section class="checkout py-lg-4 py-md-3 py-sm-3 py-3">
  <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
    <div class="shop_inner_inf">
      <div class="privacy about">
        <h3>Order</h3>
        <div class="checkout-right">
          <h4>Your order nÂ°<%= @order.id %> contained:</h4>
          <table class="timetable_sub">

            <thead>
              <tr>
                <th>SL No.</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Buy again</th>
              </tr>
            </thead>

            <tbody>
              <% i=0 %>
              <% @purchases.each_with_index do |item, index|%>
              <tr class="rem1">
                <td class="invert"><%= i += 1 %></td>
                <td class="invert-image"><img src=<%= @items[index].image_url %> class="card-img-top" alt="..."></td>
                <td class="invert">
                  <div class="quantity">
                    <div class="quantity-select">
                      <div class="entry value-minus">&nbsp;</div>
                      <div class="entry value"><span><%= item.quantity %></span></div>
                      <div class="entry value-plus active">&nbsp;</div>
                    </div>
                  </div>
                </td>
                <td class="invert"><%= @items[index].title %></td>
                <td class="invert"><%= @items[index].price %></td>
                <td class="invert">
                  <%= link_to cart_element_path(cart_elem_id: @cart_items[index].id), method: :delete do %>
                    <%= content_tag :span, "", :class => "far fa-trash-alt", style: 'color:#000000' %>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>