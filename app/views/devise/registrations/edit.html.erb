<!-- //short-->
<section class="about py-lg-4 py-md-3 py-sm-3 py-3">  


  <div class="container">

    <div class="register-form">
      <div class=" modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit</h5>
        <!--h2>Edit <%= resource_name.to_s.humanize %></h2-->
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email" %>
        </div><br/>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password %> <i><%= @minimum_password_length %> characters minimum</i><br />
          <%= f.password_field :password, placeholder: "New password (leave blank if you don't want to change it)", autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em></em>
          <% end %>
        </div><br/>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, placeholder: "New password confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, placeholder: "Current password", autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Update" , class:"btn subscrib-btnn" %>
        </div>
      <% end %>
      <br/>
      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class:"btn subscrib-btnn", method: :delete %></p>

      <%= link_to "Back", :back %>
    </div>


  </div>

  <%= render "devise/shared/links" %>

</section>
