<div class='container'>
    <div class='card-deck'>
        <div class="row">
            <div class="card border-primary mb-3" style="min-width: 20rem;">
                <img src="<%= @item.image_url %>" class="card-img-top">
                <%= @item.title %>
                <%= @item.description %>
                <%= @item.price %>           
                <% unless current_user.nil? %>
                    <a class="btn btn-primary" href="<%= new_charge_path(id: @item.id) %>" >Buy now</a>
                <% end %>
            </div>
        </div>
        <!-- //short-->
        <!--/shop-->
        <section class="banner-bottom py-lg-5 py-3">
            <div class="container">
                <div class="inner-sec-shop pt-lg-4 pt-3">
                <div class="row">
                    <div class="single-right-left">
                            <ul class="slides">
                                <li data-thumb="images/f2.jpg">
                                    <div class="thumb-image"> <img src=<%= @item.image_url %> data-imagezoom="true" class="img-fluid" alt=" "> </div>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="col-lg-8 single-right-left simpleCart_shelfItem">
                        <h3><%= @item.title %></h3>
                        <p><span class="item_price">$<%= @item.price %></span>
                            <del>$99,99</del>
                        </p>
                        <div class="description text-justify">
                            <h5><%= @item.description %></h5>
                        </div>
                        <br>
                        <div class="occasion-cart">
                            <div class="toys single-item singlepage">
                            <form action="#" method="post">
                                <button type="submit" class="toys-cart ptoys-cart add">
                                Add to Cart
                                </button>
                            </form>
                            </div>
                        </div>
                        </div>
                        </div>
                        </div>
                        </div>
                        <br>
                        <br>
    </body>
    </div>
</div>
