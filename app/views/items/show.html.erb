    <!--//banner -->
    <!-- short -->
        <div class="using-border py-3">
            <div class="inner_breadcrumb  ml-4">
                <ul class="short_ls">
                <li>
                    <a href="index.html">Pic</a>
                    <span>/ /</span>
                </li>
                <li><%= @item.title %></li>
                </ul>
            </div>
        </div>
        <!-- //short-->
        <!--/shop-->
        <section class="banner-bottom py-lg-5 py-3">
            <div class="container">
                <div class="inner-sec-shop pt-lg-4 pt-3">
                <div class="row">
                    <div class="single-right-left">
                            <ul class="slides">
                                <li data-thumb="images/f2.jpg">
                                  <% if @item.picture.attached? == true%>
                                    <div class="thumb-image"> <%= image_tag @item.picture, alt: 'picture' %> data-imagezoom="true" class="img-fluid" alt=" "> </div>
                                  <% else %>
					                          <img src="<%= @item.image_url %>" class="card-img-top">
                                  <% end %>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="col-lg-8 single-right-left simpleCart_shelfItem">
                        <h3><%= @item.title %></h3>
                        <p><span class="item_price">$<%= @item.price %></span>
                            <del>$99,99</del>
                        </p>
                        <div class="description text-justify">
                            <h5><%= @item.description %></h5>
                        </div>
                        <br>
                        <div class="occasion-cart">
                            <div class="toys single-item singlepage">
                            <form action="#" method="post">
                                <button type="submit" class="toys-cart ptoys-cart add">
                                Add to Cart
                                </button>
                            </form>
                            <% if current_user != nil && current_user.admin? == true %>
                              <button class="btn btn-primary" type="button"><%= link_to "edit picture", new_item_picture_path(params[:id])%></button>
                            <% else %>
                            <% end %>
                            </div>
                        </div>
                        </div>
                        </div>
                        </div>
                        </div>
                        <br>
    </body>